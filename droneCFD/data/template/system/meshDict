{
 "patch0.*" 
  {
    additionalRefinementLevels 5;
    refinementThickness 0.65;
  }
}

boundaryLayers
{
 patchBoundaryLayers
  {
   "patch0.*"
     {
      nLayers 3;
      thicknessRatio 1.1;
      maxFirstLayerThickness 0.001;
      allowDiscontinuity 0;
     }
  }
}

